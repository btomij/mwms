<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/colorPrimaryBack"
    tools:context="com.example.joelin.mwms.LoginActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/colorPrimaryTitle">
            <ImageView
                android:layout_marginTop="20dp"
                android:src="@drawable/appicon"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorTitleTextColor"
                android:textSize="@dimen/app_text_size"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:background="@drawable/rdc_textedit"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:hint="@string/text_pls_input_user"
                android:padding="10dp"
                android:textColor="@color/colorTextEditColor"
                android:textColorHint="@color/colorTextHintColor"
                android:singleLine="true"
                android:maxLines="1"
                android:lines="1"
                android:textSize="@dimen/textView_text_size"
                android:id="@+id/txt_user"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/rdc_textedit"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_lock_black_24dp"
                android:hint="@string/text_pls_input_pass"
                android:padding="10dp"
                android:textColor="@color/colorTextEditColor"
                android:textColorHint="@color/colorTextHintColor"
                android:singleLine="true"
                android:maxLines="1"
                android:lines="1"
                android:textSize="@dimen/edit_text_size"
                android:id="@+id/txt_pass"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/rdc_button"
                android:text="@string/text_login"
                android:textColor="@color/colorButtonTextColor"
                android:textSize="@dimen/btn_text_size"
                android:id="@+id/btn_login"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>